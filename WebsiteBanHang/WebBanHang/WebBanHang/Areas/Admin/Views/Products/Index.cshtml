 @model PagedList.PagedList<WebBanHang.Models.EF.Product>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Quản Lý Sản Phẩm</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Quản Lý Sản Phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh Sách Sản Phẩm</h3>

            <div class="card-tools">
                <a href="/admin/Products/add" class="btn btn-primary">Thêm Mới</a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm())
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", null, new { @class = "form-control" })
                            @*<input type="text" name="searchText" class="form-control">*@
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm Kiếm</button>
                               </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Hình Ảnh</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Danh Mục</th>
                        <th>Số Lượng</th> 
                        <th>Giá</th> 
                        <th>Cost</th> 
                        <th>Ngày Tạo</th>
                        <th>Home</th>
                        <th>Hot</th>
                        <th>Hiển Thị</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHome = item.isHome ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHot = item.isHot ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                    <tr id="trow_@item.Id">
                        <td>@i</td>
                        @*<td><img src="@item.ProductImage.FirstOrDefault(x=>x.isDefault).Image" width="50" /></td>*@
                        <td>
                            @if (item.ProductImage.FirstOrDefault(x => x.isDefault) != null)
                            {
                    <img src="@item.ProductImage.FirstOrDefault(x => x.isDefault).Image" width="50" /> }
                                        else
                                        {
                    <span>Không có ảnh</span> <!-- Hoặc hiển thị hình ảnh mặc định nếu muốn -->}
                        </td>
                        <td>@item.Title</td>
                        <td>@item.ProductCategory.Title</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@item.Cost</td>
                        <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center"><a class="btnHome" data-id="@item.Id" href="#">@Html.Raw(strCheckHome)</a></td>
                        <td class="text-center"><a class="btnHot" data-id="@item.Id" href="#">@Html.Raw(strCheckHot)</a></td>

                        <td class="text-center"><a class="btnActive" data-id="@item.Id" href="#">@Html.Raw(strCheck)</a></td>
                        <td>
                            <a href="/admin/products/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>|
                            <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a> |
                            <a href="#" class="btn btn-sm btn-success btnNhapHang" data-id="@item.Id">Nhập</a>
                        </td>

                    </tr>

                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Khong co ban ghi nao!</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-12" style="text-align:center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>

        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<div class="modal fade" id="modalNhapHang" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="formNhapHang">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nhập thêm số lượng</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="productId" />
                    <div class="form-group">
                        <input type="number" id="quantity" class="form-control" placeholder="Nhập số lượng" min="1" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn chắc chẵn muốn xóa bản ghi này không?");
                if (conf == true) {
                    $.ajax({
                        url: '/admin/products/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {

                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });

            $('body').on('click', '.btnActive', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/Active',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.Active) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });

            $('body').on('click', '.btnHome', function () {
                var id = $(this).data("id");
                var btn = $(this);  
                $.ajax({
                    url: '/admin/products/Home',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.Home) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });

            $('body').on('click', '.btnHot', function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: '/admin/products/Hot',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.Hot) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });

            $('body').on('click', '.btnNhapHang', function () {
                var id = $(this).data('id');
                $('#productId').val(id);
                $('#quantity').val(1);
                $('#modalNhapHang').modal('show');
            });

            // Khi submit form nhập hàng
            $('#formNhapHang').submit(function (e) {
                e.preventDefault();
                var id = $('#productId').val();
                var quantity = parseInt($('#quantity').val());

                if (quantity > 0) {
                    $.post('/admin/products/NhapHang', { id: id, quantity: quantity }, function (res) {
                        if (res.success) {
                            alert('Đã nhập hàng thành công!');
                            location.reload();
                        } else {
                            alert('Lỗi khi nhập hàng!');
                        }
                    });
                } else {
                    alert('Vui lòng nhập số lượng hợp lệ.');
                }
            });
        });
    </script>
}