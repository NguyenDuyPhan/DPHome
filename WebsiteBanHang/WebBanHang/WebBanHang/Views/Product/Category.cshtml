@model IEnumerable<WebBanHang.Models.EF.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .product-grid {
        display: flex;
        flex-wrap: wrap;
    }
</style>
<link rel="stylesheet" type="text/css" href="/Content/Asset/styles/categories_styles.css">
