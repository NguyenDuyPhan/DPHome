                    <li><a href="trang-chu">Home</a></li>
                    <li class="active"><a href="san-pham"><i class="fa fa-angle-right" aria-hidden="true"></i>All</a></li>
                </ul>
            </div>

            <!-- Sidebar -->

            <div class="sidebar">
                @Html.Action("MenuRight", "Menu")

