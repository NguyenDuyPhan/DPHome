@model IEnumerable<WebBanHang.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
        <div class="sidebar_section">
            <div class="sidebar_title">
                <h5>Danh Mục</h5>
            </div>

            <ul class="sidebar_categories">
                <li><a href="@Url.Action("Index", "Product", new { area = "" })"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Tất Cả</a></li>
                @foreach (var item in Model)
                {
                    <li><a href="@Url.Action("Category", "Product", new { id = item.Id })"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
                }
            </ul>
        </div>
        }
