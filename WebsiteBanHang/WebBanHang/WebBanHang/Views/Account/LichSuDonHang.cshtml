@model IEnumerable<WebBanHang.Models.EF.Order>
@if (Model != null)
{
    var i = 1;
<h2>Lịch Sử Mua Hàng</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>STT</td>
                            <td>Mã DH</td>
                            <td>In Phiếu Mua Hàng</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
        <tr>
            <td>@i</td>
            <td>
                <a href="@Url.Action("Detail", "ShoppingCart", new { id = item.Id })">
                    @item.Code
                </a>
            </td>
            <td>
                <a href="/ShoppingCart/ExportPdf/@item.Id" class="btn btn-primary" target="_blank">In  (PDF)</a>
            </td>
        </tr>i++;
                        }
                    </tbody>
                </table>}
